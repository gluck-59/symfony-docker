{{ include('_header.html.twig') }}
{% set loginArr = ['login', 'index'] %}
    <body>
        {% if app.request.attributes.get('_route') not in loginArr %}
            <header>
                <nav class="navbar navbar-inverse navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">
                            <img id="logo" src="/img/logo-medved.png">
                        </a>
                        <a class="navbar-brand" href="#">{{ title|default('Навырост') }}</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="mx-3 my-2 {% if app.request.attributes.get('_route') == 'main' %} active{% endif %}"><a href="/"><i class="bi bi-house-door-fill"></i> Главная</a></li>
                                <li class="mx-3 my-2 {% if app.request.attributes.get('_route') == 'request' %} active{% endif %}"><a href="/request"><i class="bi bi-list-task"></i> Заявки</a></li>
                                <li class="mx-3 my-2 {% if app.request.attributes.get('_route') == 'equipment' %} active{% endif %}"><a href="/equipment"><i class="bi bi-gear-wide-connected"></i> Обрудование</a></li>
                                <li class="mx-3 my-2 {% if app.request.attributes.get('_route') == 'customer' %} active{% endif %}"><a href="/customer"><i class="bi bi-building-gear"></i> Клиенты</a></li>
                                <li class="mx-3 my-2 {% if app.request.attributes.get('_route') == 'report' %} active{% endif %}"><a href="/report"><i class="bi bi-list-columns-reverse"></i> Отчеты</a></li>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="mx-3 my-2 {% if app.request.attributes.get('_route') == 'register' %} active{% endif %}"><a href="/user/list"><i class="bi bi-person-add"></i> Юзеры</a></li>
                                {% endif %}
                            </ul>
                            {% if app.user %}
                                <ul class="navbar-nav me1-auto mb-2 mb-lg-0">
                                    <li>
                                        <a href="{{ path('logout') }}">{{ app.user.userIdentifier }} (Logout)</a>
                                    </li>
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                </nav>
            </header>
        {% endif %}
route: {{ app.request.attributes.get('_route') }}
        <div class="container-fluid">
        {% block body %}
        {% endblock %}
        </div>
        {% if app.request.attributes.get('_route') not in loginArr %}
            {{ include('_footer.html.twig') }}
        {% endif %}
    </body>
</html>



