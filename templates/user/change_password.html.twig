{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
    <h2>{{ title }} для {{ app.user.userIdentifier }}</h2>
    {{ form_start(form) }}
<div class="row mb-2">
    <div class="col-md-3">
        <div class="col-md-6">
            {{ form_row(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.newPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>
    <a class="btn btn-outline-info" href="{{ path('main') }}">Назад</a>
    <button type="submit" class="btn btn-success">Изменить</button>
    {{ form_end(form) }}
{% endblock %}


