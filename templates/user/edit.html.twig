{% extends 'base.html.twig' %}

{% block title %}Редактирование пользователя{% endblock %}

{% block body %}
    <h1>Редактирование пользователя {{ user.username }}</h1>

    {# применяем тему для этого конкретного шаблона, если нужно дополнительно #}
    {% form_theme form 'bootstrap_5_layout.html.twig' %}

    {{ form_start(form) }}

    <div class="row mb-2">
        <div class="col-md-3">
            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.username) }}
        </div>
        <div class="col-md-3">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password) }}
        </div>
        <div class="col-md-3">
            {{ form_label(form.roles) }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-3">
            <br>
            <button type="submit" class="btn btn-success">Сохранить</button>
        </div>
    </div>
    {{ form_end(form) }}

    <a href="{{ path('user_list') }}" class="btn btn-secondary mt-3">Назад к списку пользователей</a>
{% endblock %}
