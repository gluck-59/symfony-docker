{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Зарплата по месяцам</h1>

            {% if rows is not empty %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Месяц</th>
                                <th class="text-end">Сумма, ₽</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in rows %}
                                <tr>
                                    <td>{{ row.month }}</td>
                                    <td class="text-end">{{ row.sum|number_format(0, ',', ' ') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-secondary">Нет данных для отображения.</div>
            {% endif %}

            <a class="btn btn-primary" href="{{ path('report_salary_by_month', { download: 'csv' }) }}">В Excel</a>

            <hr class="my-4">

            <h2 class="mb-3">Примеры отчетов</h2>
            <ul class="list-group">
                <li class="list-group-item"><a href="{{ path('report_debitorka') }}">Дебиторская задолженность</a></li>
                <li class="list-group-item"><a href="{{ path('report_total_payed') }}">Оплата по клиентам</a></li>
                <li class="list-group-item"><a href="{{ path('report_salary_by_month') }}">Зарплата по месяцам</a></li>
            </ul>
        </div>
    </div>
{% endblock %}
