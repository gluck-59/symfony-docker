{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1 class="h3 mb-4">{{ title }}</h1>
    {{ form_start(form) }}
        <div class="row g-3 mb-3">
            <div class="col-12 col-md-4">
                {{ form_label(form.customer) }}
                {{ form_widget(form.customer, {'attr': {'class': 'form-select', 'data-live-search': 'true'}}) }}
                {{ form_errors(form.customer) }}
            </div>
            <div class="col-12 col-md-4">
                {{ form_label(form.equipment) }}
                {{ form_widget(form.equipment, {'attr': {'class': 'form-select', 'data-live-search': 'true'}}) }}
                {{ form_errors(form.equipment) }}
            </div>
            <div class="col-12 col-md-4">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="mb-3">
            {{ form_label(form.notes) }}
            {{ form_widget(form.notes, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.notes) }}
        </div>
        <button class="btn btn-success" type="submit">Создать</button>
        <a class="btn btn-outline-secondary" href="{{ path('request_index') }}">Отмена</a>
    {{ form_end(form) }}
{% endblock %}
