{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1 class="mb-3">{{ title }}</h1>

    <div class="mb-3">
        <a href="{{ path('equipment_add') }}" class="btn btn-success">Добавить оборудование</a>
    </div>

    {% if equipment is empty %}
        <div class="alert alert-info">Оборудования пока нет</div>
    {% else %}
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    {% if is_admin %}<th>ID</th>{% endif %}
                    <th>Клиент</th>
                    <th>Название</th>
                    <th class="d-none d-md-table-cell">Марка</th>
                    <th class="d-none d-md-table-cell">Город</th>
                    <th class="d-none d-md-table-cell">Адрес</th>
                    <th class="d-none d-md-table-cell">Серийный №</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for e in equipment %}
                <tr>
                    {% if is_admin %}<td>{{ e.id }}</td>{% endif %}
                    <td>{{ e.customer ? e.customer.name : '—' }}</td>
                    <td><a href="{{ path('equipment_show', {id: e.id}) }}">{{ e.name }}</a></td>
                    <td  class="d-none d-md-table-cell">{{ e.mark ?? '—' }}</td>
                    <td class="d-none d-md-table-cell">{{ e.city ?? '—' }}</td>
                    <td class="d-none d-md-table-cell">{{ e.address ?? '—' }}</td>
                    <td class="d-none d-md-table-cell">{{ e.serial ?? '—' }}</td>
                    <td class="text-end">
                        <a href="{{ path('equipment_edit', {id: e.id}) }}" class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i></a>
                        <form method="post" action="{{ path('equipment_delete', {id: e.id}) }}" class="d-inline" onsubmit="return confirm('Удалить оборудование #{{ e.id }}?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_equipment_' ~ e.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-x-circle"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
